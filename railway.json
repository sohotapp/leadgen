{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install && pnpm build"
  },
  "deploy": {
    "startCommand": "cd apps/web && node .next/standalone/apps/web/server.js",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE"
  }
}
